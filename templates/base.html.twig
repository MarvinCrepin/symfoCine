        <div class="mb-5 flex-center">

          
          <!--Linkedin -->
          

        </div>
      </div>
      <!-- Grid column -->

    </div>
    <!-- Grid row-->

  </div>
  <!-- Footer Elements -->

  <!-- Copyright -->
  <div class="footer-copyright text-center py-3">© 2021 Copyright:
  
    <a href="https://github.com/MarvinCrepin"> MarvinCrepin</a>
    <a href="https://www.linkedin.com/in/marvin-crepin/" class="li-ic">
            <i class="fab fa-linkedin-in fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
          </a>
  </div>
  <!-- Copyright -->

</footer>
<!-- Footer -->
